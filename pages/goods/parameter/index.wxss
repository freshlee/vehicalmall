/* index.wxss */
page{
    background: #f4f4f4;
}
.header{
    padding: 20rpx 0;    
    background: white;
}
.header>view{
    height: 43rpx;
    line-height: 43rpx;
    font-size: 25rpx;
}
.header>view .tag{
    display: inline-block;
    width: 150rpx;
    text-align: right;
}
/* 报告盒子 */
.title{
    height: 103rpx;
    line-height: 103rpx;
    border-top:2rpx solid #adadad;
}
.contain:last-of-type .title{
    border-bottom:2rpx solid #adadad;
}
.line{
    border-left: 4rpx solid rgba(250, 128, 10,1);
    display: inline-block;
    height: 30rpx;
    margin-left: 30rpx;
}
.box{
    background: white;
}
.box .list{
    padding: 0 30rpx;
    height: 87rpx;
    line-height: 87rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #adadad;
}
.box .list:last-of-type{
    border: none;
}
.box .list text{
    display: inline-block;
    line-height: 87rpx;
    height: 87rpx;
    vertical-align: top;
}
.box .list .value{
    width: 400rpx;
    line-height: 87rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    display: inline-block;
    vertical-align: top;
    text-align: right;
    float: right;
    color: #adadad;
    font-size: 25rpx;
}
.title image{
    display: block;
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: 30rpx;
    float: right;
    margin-right:30rpx; 
}
/* 样式切换 */
.arrowon{
  transform: rotate(180deg);
}
.arrowoff{
  transform: rotate(0);
}
.expend{
  display: block;
}
.compressed{
  display: none;
}
#copyright{
    text-align: center;
    margin:10rpx 0;
    font-size: 25rpx;
}
