/* index.wxss */

.progame_bar{
    background: #f4f4f4;
    padding: 40rpx 0;
}
.progame_bar .name{
    margin-top: 15rpx;
}
.progame_bar .name>view{
    display: inline-block;
    width: 33.3%;
    vertical-align: top;
    font-size: 25rpx;
    text-align: center;
}
.case{
    background: white;
    padding: 0 30rpx; 
}
.case .list{
  height: 110rpx;
  line-height: 110rpx;
   border-bottom: 2rpx solid #f4f4f4;
   font-size: 30rpx;
}
.case .list:last-of-type{
   border-bottom: none;
}
.case .logo{
    width: 50rpx;
    height: 50rpx;
    transform: translateY(10rpx);
}
.rightside{
    float: right;
    height: 110rpx;
    color: dimgray;
}
.rightside image{
    width: 40rpx;
    height: 30rpx;
    transform: rotate(-90deg);
}
.rightside input{
    display: inline-block;
    height: 110rpx;
    line-height: 110rpx;
    vertical-align: top;
    width: 200rpx;
    text-align: right;
    margin-right: 10rpx;
}
.rightside text{
    vertical-align: top;
    display: inline-block;
    height: 110rpx;
    line-height: 110rpx;
}
/* 车牌选项 */
.options{
    background: white;
    padding: 30rpx 0;
}
.options .casetitle{
    padding: 10rpx 30rpx;
    color: black;
    font-size: 30rpx;
}
.options .optionscase{
    display: inline-block;
    width: 33.3%;
    text-align: center;
    vertical-align: top;
    margin-bottom: 30rpx;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    height: 60rpx;
    line-height: 60rpx;
}
.optionscase image{
    width:150rpx;
    height: 60rpx;
}
.optionscase .optionsname{
    font-size: 30rpx;
    color: dimgray;
    padding: 5rpx 0;
    border: 2rpx solid dimgray;
    border-radius: 5rpx; 
    height: 60rpx;
    overflow: hidden;
}
/* 控件 */
.selector{
    background: white;
    padding: 30rpx 0;
}
.selector .casetitle{
    padding: 20rpx 30rpx;
    color: black;
}

.selector slider{
    position: relative;
}
.selector slider:last-child{
    transform: translateY(-55rpx);
}
.parameter{
    transform: translateY(-55rpx);
}
.parameter>view{
    display: inline-block;
    width: 20%;
    text-align: center;
}
/*控件2*/
.parameter{
    transform: translateY(-55rpx);
    padding: 10rpx 0;
}
.parameter>view{
    display: inline-block;
    width: 16.66%;
    text-align: center;
}
/* 样式切换 */
.choseoption{
    background: orangered;
    color: white !important;
    border: none !important;
}