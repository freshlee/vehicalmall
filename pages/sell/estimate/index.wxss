/* 切换样式 */
.brandon{
    display:block; 
}
.brandoff{
    display: none;
}
.subbrandon{
    display:block; 
    transform: translateX(0);
    transition-property:transform; 
    transition-duration: 0.5s;
}
.subbrandoff{
    transform: translateX(500rpx);
    transition-property:transform; 
    transition-duration: 0.5s;
}
.timeon{
    display:block; 
    transform: translateX(0);
    transition-property:transform; 
    transition-duration: 0.5s;
}
.timeoff{
    transform: translateX(500rpx);
    transition-property:transform; 
    transition-duration: 0.5s;
}
