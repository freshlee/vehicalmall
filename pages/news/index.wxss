#body1 {
    padding: 0 20rpx;
    width: 100%;
    box-sizing: border-box;
}

.nav {
    background: white;
    border-bottom: 6rpx solid #f4f4f4;
}

.nav>view {
    display: inline-block;
    width: 33.33%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    box-sizing: border-box;
    color: #454545;
}

.bechosen {
    border-bottom: 4rpx solid rgba(250, 128, 10, 1) !important;
    color: rgba(250, 128, 10, 1) !important;
}

/* 文章列表 */

.cases {
    padding: 10rpx 30rpx;
}

.cases .list {
    border-bottom: 2rpx solid #adadad;
    padding: 20rpx 0;
}

.list .title {
    line-height: 30rpx;
    font-size: 30rpx;
    border-left: 6rpx solid rgb(250, 128, 10);
    padding-left: 10rpx;
}

.list .content {
    line-height: 40rpx;
    font-size: 25rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    padding: 10rpx 0;
    color: dimgray;
}

/* 文章盒子 */
.articlebox{
    padding: 30rpx 20rpx;
    position: relative;
    border-bottom: 1rpx solid #dfdfdf;
}
.articlebox>view{
    display: inline-block;
    vertical-align: top;
    height: 150rpx;
}
.articlebox image{
    width: 225rpx;
    height: 150rpx;
}
.articlebox .info .up{
      font-size: 30rpx;
      width: 460rpx;
      line-height: 50rpx;
      margin-right: 25rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.articlebox .info .lower{
    font-size: 25rpx;
    position: absolute;
    bottom: 0;
    margin-bottom: 30rpx;
    color: #adadad;
}
#copyright{
    text-align: center;
    margin:10rpx 0;
    font-size: 25rpx;
}
